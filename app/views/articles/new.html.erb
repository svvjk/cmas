<html>
<head>
  <title>New Article Submission</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  
  <style>
    .col-sm-4{
      margin-top: 15%;
    }

    #error_explanation,table{
      background-color: yellow;
      border: 1px solid #ffffff;
      color:red;
      padding-top: 1em;
      padding-left: 1em;
      padding-bottom: 1em;
      padding-right: 1em;

    }

    body{
      align-content: center;
      background-color: grey;
      background-image: url(/images/10.png);
      background-repeat: no-repeat;
      background-size: cover;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row">
      
      <div class="col-sm-4">
        <% if @article.errors.any? %>
          <div id="error_explanation">
           <h2>
            <%= pluralize(@article.errors.count, "error") %> prohibited
              this article from being saved:
           </h2>
         <ul>
           <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
           <% end %>
         </ul>
        </div>
        <% end %>
      </div>

      <div class="col-sm-4">
      </div>
      
      <div class="col-sm-4">
        <table>
          <%= form_with scope: :art,url: articles_path, local: true do |form| %>
          <tr><td colspan="2"><h1>New Submission</h1></td></tr>
  <tr>
    <td>Articleno :</td>
    <td><%= form.text_field :Articleno %></td>
  </tr>
 <tr>
    <td>Regno :</td>
    <td><%= form.text_field:Regno %></td>
  </tr>
 
  <tr>
    <td>Abstract :</td>
    <td><%= form.text_area :abstract %></td>
  </tr>
  <tr>
    <td>Articletype :</td>
    <td><%= form.text_field:Articletype %></td>
  </tr>
  
  
  <tr>
    <td>Language :</td>
    <td><%= form.text_field:Language %></td>
  </tr>
  <tr>
    <td>Article :</td>
    <td><%= form.text_area :article %></td>
  </tr>
 
  <tr>
    <td></td><td><%= form.submit :submit %></td>
  </tr>

</table>
<% end %>
</div>

</div>
</div>
</body>
</html>