  <table>
    <tr>
      <td colspan="2" align="center"><h2>New Student Registration</h2></td>
    </tr>
  <tr>
    <td>Name :</td>
    <td><%= form.text_field :name %></td>
  </tr>
 
  <tr>
    <td>Contact No :</td>
    <td><%= form.text_field :contactno %></td>
  </tr>

 <tr>
    <td>Email Id :</td>
    <td><%= form.text_field :Emailid %></td>
  </tr>

  <tr>
    <td>Current Semester :</td>
    <td><%= form.text_field :currentsemester %></td>
  </tr>

  <tr>
    <td>Reg Id :</td>
    <td><%= form.text_field :Regid %></td>
  </tr>
    <tr>
    <td>Password :</td>
    <td><%= form.password_field :password %></td>
  </tr>

  <tr>
