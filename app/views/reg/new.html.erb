<body>
<%= form_with scope: :rg,url: "/reg",  local: true do |form| %>
<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <% if @reg.errors.any? %>
        <div id="error_explanation">
        <h3>
          <%= pluralize(@reg.errors.count, "error") %> prohibited
